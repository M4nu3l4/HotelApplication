@model HotelApplication.Models.Prenotazione

@{
    ViewData["Title"] = "Modifica Prenotazione";
}

<h2 class="text-white mt-4 mb-4">Modifica Prenotazione</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-controller="Amministrazione" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="PrenotazioneId" />

            <div class="form-group">
                <label asp-for="ClienteId" class="control-label text-white"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                    <option value="">-- Seleziona Cliente --</option>
                </select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CameraId" class="control-label text-white"></label>
                <select asp-for="CameraId" class="form-control" asp-items="ViewBag.CameraId">
                    <option value="">-- Seleziona Camera --</option>
                </select>
                <span asp-validation-for="CameraId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataInizio" class="control-label text-white"></label>
                <input asp-for="DataInizio" type="date" class="form-control" />
                <span asp-validation-for="DataInizio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataFine" class="control-label text-white"></label>
                <input asp-for="DataFine" type="date" class="form-control" />
                <span asp-validation-for="DataFine" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImportoTotale" class="control-label text-white"></label>
                <input asp-for="ImportoTotale" type="number" class="form-control" step="0.01" />
                <span asp-validation-for="ImportoTotale" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StatoDisponibile" class="control-label text-white"></label>
                <input asp-for="StatoDisponibile" class="form-control" />
                <span asp-validation-for="StatoDisponibile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label text-white">Fumatore</label>
                <div class="form-check">
                    <input asp-for="Fumatore" class="form-check-input" type="checkbox" />
                    <label class="form-check-label text-white" asp-for="Fumatore">Sì</label>
                </div>
                <span asp-validation-for="Fumatore" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DipendenteId" class="control-label text-white"></label>
                <select asp-for="DipendenteId" class="form-control" asp-items="ViewBag.DipendenteId">
                    <option value="">-- Seleziona Dipendente --</option>
                </select>
                <span asp-validation-for="DipendenteId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-warning">Salva Modifiche</button>
                <a asp-action="Index" class="btn btn-secondary">Annulla</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
